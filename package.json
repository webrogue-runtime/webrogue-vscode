{
  "name": "webrogue-vscode",
  "displayName": "Webrogue",
  "description": "Webrogue support for Visual Studio Code",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/webrogue-runtime/webrogue-vscode.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:webrogue.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "webrogue-vscode.updateComponents",
        "title": "Install/Update Webrogue components"
      },
      {
        "command": "webrogue-vscode.deleteComponents",
        "title": "Uninstall Webrogue components"
      },
      {
        "command": "webrogue-vscode.getWebrogueBinPath",
        "title": "Copy path to Webrogue binary"
      },
      {
        "command": "webrogue-vscode.pack",
        "title": "Pack Webrogue configuration into WRAPP"
      }
    ],
    "taskDefinitions": [
      {
        "type": "webrogue",
        "required": [
          "config"
        ],
        "properties": {
          "config": {
            "type": "string",
            "description": "Pack Webrogue configuration into WRAPP"
          }
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "webrogue.wrapp",
        "displayName": "WRAPP",
        "selector": [
          {
            "filenamePattern": "*.wrapp"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "tar": "^7.4.3"
  }
}